{
	"name": "json-type-generator",
	"displayName": "JSON Type Generator",
	"description": "Generates Typescript types for any REST API endpoint or any URL that returns a JSON.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:json-type-generator.generateTypesFromUrl",
		"onLanguage:typecript",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [],
		"configuration": [
			{
				"title": "JSON Type Generator",
				"properties": {
					"json-type-generator.arrayDeclarationAsBrackets": {
						"type": "object",
						"order": 1,
						"description": "Declare arrays as \"T[]\" instead of \"Array<T>\"",
						"properties": {
							"Enabled": {
								"type": "boolean",
								"title": "Enabled"
							}
						},
						"additionalProperties": false,
						"default": {
							"Enabled": false
						}
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"axios": "^0.27.2"
	}
}